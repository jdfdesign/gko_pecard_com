<article class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="page-header">
        <h1><%= resource.title %></h1>
      </div>
      <%= render_copy_text(resource.body) %>
    </div> 
  </div>  
</article>
<article class="container"> 
  <div class="row">
    <% resource.children.each_with_index do |t, index| %>
      <% if index == 0 %>
          <div class="col-xs-12">
            <%= render "member", :record => t %>
          </div> 
        </div>
        <div class="row">
        <% else %>
        <div class="col-xs-12 col-sm-4">
          <%= render "member", :record => t %>
        </div>
        <% end %>  
    <% end %>
    </div> 
</article>