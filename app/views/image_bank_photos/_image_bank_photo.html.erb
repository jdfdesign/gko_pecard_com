<%# cache [action_name, image_bank_photo.site, I18n.locale, image_bank_photo.section, image_bank_photo] do %>
<div class="col-xs-6 col-sm-4 col-md-3">
  <div class="thumbnail">
	  <%= link_to(image_tag(image_bank_photo.source.url(:thumb), :class => "img-thumbnail"), image_bank_photo.source.url, :target => :blank) %>
    <div class="caption">
      <p><small><%= "ref: #{image_bank_photo.id} / #{number_to_human_size(image_bank_photo.size)}" %></small></p>
      <p><small><%= image_bank_photo.author if image_bank_photo.author.presence %></small></p>
    </div>
  </div>
</div>
<%# end %>

